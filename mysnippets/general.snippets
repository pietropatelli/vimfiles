snippet todayshort "today's date"
`!p import time; snip.rv=time.strftime("%Y-%m-%d")`
endsnippet

snippet todaylong "today's date long"
`!p import time; snip.rv=time.strftime("%d %B %Y")`
endsnippet

snippet now "date and time"
`!p import time; snip.rv=time.strftime("%Y-%m-%d %H:%M:%S")`
endsnippet

